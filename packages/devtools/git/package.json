{
  "name": "commit-craft",
  "version": "1.0.0",
  "description": "Complete git workflow automation via MCP - AI-powered commits, PR reviews, and release management",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "commit-craft": "dist/mcp-server.js"
  },
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "dev": "tsc --watch",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "mcp",
    "git",
    "github",
    "commit",
    "pr",
    "review",
    "conventional-commits",
    "semantic-versioning",
    "release",
    "claude",
    "ai"
  ],
  "author": "consigcody94",
  "license": "MIT",
  "dependencies": {
    "simple-git": "^3.25.0",
    "@octokit/rest": "^20.0.2",
    "conventional-commits-parser": "^5.0.0",
    "semver": "^7.5.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/semver": "^7.5.6",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.11",
    "ts-jest": "^29.1.1"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
