{
  "name": "worktree-wizard",
  "version": "1.1.0",
  "description": "Beautiful, intuitive CLI for managing Git worktrees - work on multiple branches simultaneously without the hassle. Now with MCP server support for LLM integration!",
  "main": "dist/index.js",
  "bin": {
    "wt": "dist/cli.js",
    "worktree-wizard": "dist/cli.js",
    "worktree-wizard-mcp": "dist/mcp-server.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/cli.ts",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "git",
    "worktree",
    "cli",
    "productivity",
    "developer-tools",
    "git-worktree",
    "branch-management",
    "tui",
    "terminal"
  ],
  "author": "consigcody94",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/consigcody94/worktree-wizard.git"
  },
  "bugs": {
    "url": "https://github.com/consigcody94/worktree-wizard/issues"
  },
  "homepage": "https://github.com/consigcody94/worktree-wizard#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "inquirer": "^8.2.6",
    "ora": "^5.4.1",
    "simple-git": "^3.22.0",
    "cli-table3": "^0.6.3",
    "fuzzy": "^0.1.3",
    "inquirer-autocomplete-prompt": "^2.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "@types/jest": "^29.5.11",
    "@types/inquirer": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
