{
  "name": "model-forge-3d",
  "version": "1.2.0",
  "description": "The ultimate text-to-3D MCP server - Generate 4K marketplace-ready 3D models from text with VRChat, IMVU, Second Life exports",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "model-forge-3d": "dist/mcp-server.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/mcp-server.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "3d",
    "text-to-3d",
    "ai",
    "blender",
    "vrchat",
    "imvu",
    "secondlife",
    "3d-generation",
    "model-context-protocol"
  ],
  "author": "consigcody94",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
