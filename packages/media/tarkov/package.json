{
  "name": "tarkov-tracker",
  "displayName": "Tarkov Tracker",
  "version": "1.0.0",
  "description": "Real-time position tracker for Escape from Tarkov - Open source alternative to TarkovQuestie",
  "main": "electron/main.js",
  "author": "Tarkov Tracker Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ajs/tarkov-tracker.git"
  },
  "keywords": [
    "tarkov",
    "escape-from-tarkov",
    "eft",
    "tracker",
    "map",
    "position",
    "overlay",
    "electron",
    "mcp"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "vite build && electron-builder",
    "preview": "vite preview",
    "mcp-server": "node mcp-server/index.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "chokidar": "^3.5.3",
    "clsx": "^2.1.1",
    "leaflet": "^1.9.4",
    "lucide-react": "^0.454.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.5.4",
    "zustand": "^4.5.5"
  },
  "devDependencies": {
    "@types/leaflet": "^1.9.12",
    "@types/node": "^22.9.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.tarkov.tracker",
    "productName": "Tarkov Tracker",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "mcp-server/**/*"
    ],
    "win": {
      "target": "portable",
      "icon": "src/renderer/assets/icon.png"
    }
  }
}
