# ============================================
# SOCIAL MEDIA MCP SERVER - CONFIGURATION
# ============================================
# Copy this file to .env and fill in your API credentials
# Only configure the platforms you want to use

# ============================================
# TWITTER / X
# ============================================
# Get these from https://developer.x.com/
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_TOKEN_SECRET=
TWITTER_BEARER_TOKEN=

# ============================================
# LINKEDIN
# ============================================
# Get these from https://www.linkedin.com/developers/
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=
LINKEDIN_ACCESS_TOKEN=
# Format: urn:li:person:YOUR_ID or urn:li:organization:YOUR_ORG_ID
LINKEDIN_AUTHOR_URN=
# Optional: For company page posting
LINKEDIN_ORGANIZATION_ID=

# ============================================
# META (FACEBOOK & INSTAGRAM)
# ============================================
# Get these from https://developers.facebook.com/
META_APP_ID=
META_APP_SECRET=
META_ACCESS_TOKEN=
META_USER_ID=
# Optional: Specific page ID
META_PAGE_ID=
# Optional: Instagram Business Account ID
INSTAGRAM_ACCOUNT_ID=

# ============================================
# TIKTOK
# ============================================
# Get these from https://developers.tiktok.com/
TIKTOK_CLIENT_KEY=
TIKTOK_CLIENT_SECRET=
TIKTOK_ACCESS_TOKEN=

# ============================================
# YOUTUBE
# ============================================
# Get these from https://console.cloud.google.com/
YOUTUBE_CLIENT_ID=
YOUTUBE_CLIENT_SECRET=
YOUTUBE_ACCESS_TOKEN=
YOUTUBE_REFRESH_TOKEN=
YOUTUBE_CHANNEL_ID=

# ============================================
# SERVER SETTINGS
# ============================================
# Log level: debug, info, warn, error
LOG_LEVEL=info
# Directory for storing scheduled posts
DATA_DIR=./data
# API retry settings
MAX_RETRIES=3
RETRY_DELAY=1000
TIMEOUT=30000
